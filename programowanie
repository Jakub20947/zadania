#include <iostream>
using namespace std;
void printBits( unsigned int n )
{
    const int Bits = 8 * sizeof n;
    char tmp[ Bits + 1 ];
   
    for( int i = 0; i < Bits; ++i )
    {
        tmp[ Bits - i - 1 ] = '0' + n % 2;
        n /= 2;
    }
   
    tmp[ Bits ] = 0;
    cout << tmp;
}

void showOperation( unsigned int a, unsigned int b, unsigned int result, char op )
{
    cout << "   ";
    printBits( a );
    cout << " (" << a << ")\n " << op << ' ';
    printBits( b );
    cout << " (" << b << ")\n = ";
    printBits( result );
    cout << " (" << result << ")\n\n";
}

int add( int a, int b )
{
    if( b == 0 )
         return a;
   
    return add( a ^ b,( a & b ) << 1 );
}

int main()
{
    int a, b;
    cout << "Podaj a:\n";
    cin >> a ;
    cout << "Podaj b:\n";
    cin >> b ;
    cout << " " <<'\n';
    cout << a << " | " << b << " = " << ( a|b ) << '\n';
    cout << a << " & " << b << " = " << ( a&b ) << '\n';
    cout << a << " ^ " << b << " = " << ( a^b ) << '\n';
    
}
