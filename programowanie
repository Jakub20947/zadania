#include <iostream>
#include <iomanip>
#include <fstream>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */
using namespace std;
int liczba, min, max;
class files {
   ifstream fileIn;
   ofstream fileOut;
  public:
   files(); 
   ~files();
   void loop();
};
files::files()
{
   fileIn.open("liczby1.txt");
   fileOut.open("liczby2.txt");
   if (!fileIn.good())
     cerr << "plik wejscia nie istnieje\n";
   if (!fileOut.good())
     cerr << "plik wyjscia nie istnieje\n";
}

files::~files()
{
   fileIn.close();
   fileOut.close();
}

void files::loop()
{
	while(!fileIn.eof()){
			fileIn >> oct >> liczba;
		
			if (liczba < min){
				min = liczba;
			fileOut<<"Najmniejsza:"<<oct<<min<<endl;	
			}
			
			if (liczba > max){
				max = liczba;
				fileOut<<"NajwiÄ™ksza:"<<oct<<max;
			}	
		}
}

int main(int argc, char** argv) 
	{
  files dane;
  dane.loop();
  return 1;
}
