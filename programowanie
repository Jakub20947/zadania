#include <iostream>
#include <string>
#include <fstream>
#include <cstdlib>

using namespace std;

class plik {
    ifstream input;
    int ile=0,dwie_jedynki,ciag,d,dwucykliczny;
    
    public:
        void otworzPlik();
        void zamknijPlik();
        void wczytajPlik();
        void jedynki();
        void ile_ciagow();
        void czy_dwucykliczny();
        void wypisz();
};

void plik::otworzPlik() {
    input.open("ciagi.txt");
}

void plik::zamknijPlik() {
    input.close();
}

void plik::wczytajPlik() {
	while(!input.eof()){
		getline(input, ciag);
	}
}
//63.2
void plik::jedynki() {
    bool dwie_jedynki(string ciag){
	for (int i=0; i<ciag.length()-1; i++)
 	if (ciag[i]=='1' && ciag[i+1]=='1') return false;
	return true;
} 

}
void plik::ile_ciagow()	{
	for (int i=0; i<1000; i++)
 	if (dwie_jedynki(ciagi[i])) ile++;
	 cout << "liczba ciągów: "<< ile;	
}
//63.1
void plik::czy_dwucykliczny(){
	bool dwucykliczny(string ciag)
		{ int d=ciag.length();
 		if (d%2==1) return false;
 		for (int j=0; j<d/2; j++)
 		if (ciag[j]!=ciag[d/2+j]) return false;
 		return true;
	}
}
void plik::wypisz(){
	for(int i=0; i<1000; i++)
 	if (dwucykliczny(ciagi[i]))
 	cout<<ciagi[i]<<endl;
}

int main(int argc, char** argv) {
    plik p;
    p.otworzPlik();
    p.wczytajPlik();
    p.jedynki();
    p.ile_ciagow();
    p.zamknijPlik();  
    return 0;
}
