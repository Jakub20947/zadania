#include <iostream>
#include <fstream>
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
using namespace std;
int liczba;
int t[1001];
int r1, r2, rk,r;

class files {
   ifstream fileIn;
   ofstream fileOut;
  public:
   files();
   ~files();
   void loop();
};
files::files()
{
   fileIn.open("bledne.txt");
   fileOut.open("wynik3.txt");

   if (!fileIn.good())
     cerr << "plik wejscia nie istnieje\n";
   if (!fileOut.good())
     cerr << "plik wyjscia nie istnieje\n";
}

files::~files()
{
   fileIn.close();
   fileOut.close();
}

void files::loop()
{

 //pÄ™tla WHILE do pliku fileIn
 	while(!fileIn.eof()){
			fileIn >> liczba;
			for (int i=0; i<liczba; i++) 
			plik<<t[i];
    		r1 = t[1] - t[0]
    		r2 = t[2] - t[1];
		
			if (r1 == r2) r = r1;
			else { rk= t[liczba-1]-t[liczba-2];
			if {rk==r1)
			{ r = r1;}
			else{
 			if (rk==r2)
			 r= r2;}
 			else 
   			r= rk;
			   }
			}
			fileOut<<r;
			}
		
		}
}

int main(int argc, char** argv) 
	{
  files dane;
  dane.loop();
  return 1;
}
