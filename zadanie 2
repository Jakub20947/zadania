#include <iostream>
#include <string>
#include <fstream>
#include <cstdlib>
#include <vector>

using namespace std;

class plik {
    ifstream input; string liczba;
    int bin2dec, dziesietna,number,vector,factors[ ], czynniki[ ];
    
    public:
        void otworzPlik();
        void zamknijPlik();
        void wczytajPlik();
        void zamiana();
        void rozklad();
        void wypisanie();
       
};

void plik::otworzPlik() {
    input.open("ciagi.txt");
}

void plik::zamknijPlik() {
    input.close();
}

void plik::wczytajPlik() {
	while(!input.eof()){
		input >> liczba;
	}
}
void plik::zamiana() {
	int bin2dec (string liczba);
{
    dziesietna = strtol(liczba.c_str(), NULL, 2);
    // return dziesietna;
}
	}


void plik::rozklad(){
	vector <int> factors(int number)
	{
 	vector <int> czynniki;
 	for (int i=2; i<dziesietna/2; i++)
 	{
   while (dziesietna %i ==0)
    {
         dziesietna /=i;
         czynniki.push_back(i);
    }
 }
 return czynniki;
}
}
void plik::wypisanie() {
	for( size_t i = 0; i < czynniki.size(); i++ )
         cout<<( "%d, ", czynniki[ i ] );
}

int main(int argc, char** argv) {
    plik p;
    p.otworzPlik();
    p.wczytajPlik();
    p.zamiana();
    p.rozklad();
    p.wypisanie();
    p.zamknijPlik();  
    return 0;
}
