#include <fstream>
#include <cstdlib>
#include <iostream>

using namespace std;

class file
{
        ifstream inFile1;
        ifstream inFile2;
       
        public:
                file();
                ~file();
                void loop(); //pętla wczytująca z pliku
//USER CODE 1: pozostałe metody programu
};


file::file()
{
        inFile1.open("liczby1.txt"); //tu nazwa pliku wejscia
        if (!inFile1.good())
        {
                cerr << "Blad - pliku 1 nie da sie otworzyc!\n";
                exit(1);
        }
        
        inFile2.open("liczby2.txt"); //tu nazwa pliku wejscia
        if (!inFile2.good())
        {
                cerr << "Blad - pliku 2 nie da sie otworzyc!\n";
                exit(1);
        }
}

file::~file()
{
        inFile1.close();
        inFile2.close();
}

//USER CODE 2: pozostałe metody - implementacja

void file::loop()
{
        int i;
    int liczbar = 0;
    int liczbaw = 0;
    int licz1;
    int licz2; 
        while (!inFile1.eof(), !inFile2.eof() ) //string po stringu (do spacji/nowej linii) wczyta cały plik
        {
                for(i=0; i<1000; i++) {
        inFile1 >> oct >> licz1;
        inFile2 >> dec >> licz2;

        if (licz1 == licz2) {
            liczbar++;
        } else if (licz1 > licz2) {
            liczbaw++;
        }
    }
                cout << liczbar << " par liczb ma te sama wartosc\n";
    			cout << liczbaw << " liczb z pierwszego pliku jest wiekszych od odpowiadajacych im liczb z drugiego pliku\n\n";
        }
}

int main()
{
        file f;
        f.loop();
        return 0;
}
