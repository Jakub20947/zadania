#include <iostream>
#include <fstream>
/* run this program using the console pauser or add your own getch, system("pause") or input loop */
using namespace std;
int i,taka_sama = 0,wieksza = 0,liczba1,liczba2;
class files {
   ifstream fileIn;
      ifstream fileIn2;
   ofstream fileOut;
  public:
   files(); //otwarcie plików obu
   ~files();
   void loop();
};
files::files()
{
   fileIn.open("liczby1.txt");
   fileIn2.open("liczby2.txt");
   fileOut.open("17v2.txt");
   // tu można dodać 
   if (!fileIn.good())
     cerr << "plik wejscia nie istnieje\n";
  
}

files::~files()
{
   fileIn.close();
   fileOut.close();
}

void files::loop()
{

 //pętla do pliku fileIn
 	for(i=0; i<1000; i++) {
        fileIn >> oct >> liczba1;
        fileIn2 >> dec >> liczba2;

        if (liczba1 == liczba2) {
            taka_sama++;
        } else if (liczba1 > liczba2) {
            wieksza++;
        }
    }
     cout << taka_sama << " liczby mają w obu plikach taką samą wartość"<<endl;
     cout << wieksza <<" liczb z pliku liczby1 ma większą wartośc od liczb z pliku liczby2 ";
		}
		

int main(int argc, char** argv) 
	{
  files dane;
  dane.loop();
  return 1;
 	
}
