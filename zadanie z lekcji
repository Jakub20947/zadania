#include <iostream>
#include <string>
#include <iomanip>
#include <fstream>
using namespace std;

class plik {
    ifstream input;
    string nazwa_pliku = "dane_ulamki.txt";
    
    public:
        void otworzPlik();
        void zamknijPlik();
        void wczytajPlik();
        void Euklides();
        void wypisanie(); 
        void zliczenie();
        
};

void plik::otworzPlik() {
    input.open( nazwa_pliku.c_str(), std::ios::in );
if( !input.is_open() ) {
    cout << endl << "Blad otwarcia pliku wejsciowego." << endl;
    }
}

void plik::zamknijPlik() {
    input.close();
}

void plik::wczytajPlik() {
    int licznik[1000];
    int mianownik[1000];
    for(int i=0;i<1000;i++)
        input>>licznik[i]>>mianownik[i];
		
}
void plik::Euklides(){
	int nwd(int n, int m){
	if (m==0) return n;
 	return nwd(m,n%m);
} 
}

void plik::zliczenie(){ // jeśli nwd jest równe 1 to +1
