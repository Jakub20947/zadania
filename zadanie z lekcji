#include <iostream>
#include <string>
#include <fstream>
#define RZM 20
#define ROZM
typedef short obrazek[RZM+1][RZM+1];

using namespace std;

class plik {
    ifstream input;
    int i,j,parzysteWiersz,parzKol,pobraz,
    string nazwa_pliku = "dane_obrazki.txt";
    
    public:
        void otworzPlik();
        void zamknijPlik();
        void wczytajPlik();
        void korekta();
        void wypisanie(); 
};

void plik::otworzPlik() {
    input.open( nazwa_pliku.c_str(), std::ios::in );
if( !input.is_open() ) {
    cout << endl << "Blad otwarcia pliku wejsciowego." << endl;
    }
}

void plik::zamknijPlik() {
    input.close();
}

void plik::wczytajPlik() {
    for( int i = 0; i < 20; i++ )
{
    for( int j = 0; j < 20; j++ )
    {
        input >> RZM[i][j];
    }
    cout<<RZM;
}
}


void plik::korekta(){
	int parzw,parzk;
 struct korekta wynik;
 wynik.wiersz=ROZM+1;
 wynik.kolumna=ROZM+1;
 for(int i=0; i<RZM; i++){
 parzysteWiersz=parzKol=0;
 for(int j=0; j<RZM; j++){
 parzysteWiersz=parzysteWiersz+pobraz[i][j];
 parzKol=parzKol+pobraz[j][i];
 }
 if ((parzysteWiersz%2)!=pobraz[i][ROZM])
 wynik.wiersz=i+1;
 if ((parzKol%2)!=pobraz[ROZM][i])
 wynik.kolumna=i+1;
 }
 return wynik;
}
	
}

void plik::wypisanie(){
 cout<< wynik;
} 

int main(int argc, char** argv) {
    plik p;
    p.otworzPlik();
    p.wczytajPlik();
    p.korekta();
    p.wypisanie();
    p.zamknijPlik();  
    return 0;
}
