#include <iostream>
#include <string>
#include <iomanip>
#include <fstream>
using namespace std;

class plik {
    ifstream input;
    string nazwa_pliku = "dane_ulamki.txt";
    
    public:
        void otworzPlik();
        void zamknijPlik();
        void wczytajPlik();
        void petla();
        void wypisanie(); 
};

void plik::otworzPlik() {
    input.open( nazwa_pliku.c_str(), std::ios::in );
if( !input.is_open() ) {
    cout << endl << "Blad otwarcia pliku wejsciowego." << endl;
    }
}

void plik::zamknijPlik() {
    input.close();
}

void plik::wczytajPlik() {
    int licznik[1000];
    int mianownik[1000];
    for(int i=0;i<1000;i++)
        input>>licznik[i]>>mianownik[i];
		
}
void plik::petla(){
	float minimum=10000;
    int minimum_mianownik=100000;
    int minimum_licznik=100000;
    for (int i=0;i<1000;i++)
    {
        float iloraz=float(licznik[i])/float(mianownik[i]);
        if(iloraz==minimum)
        {
            if(mianownik[i]<minimum_mianownik)
                {
                    minimum=iloraz;
                    minimum_mianownik=mianownik[i];
                    minimum_licznik=licznik[i];
                }
        }
        else if(iloraz<minimum)
        {
                minimum=iloraz;
                minimum_mianownik=mianownik[i];
                minimum_licznik=licznik[i];
        }
    }
}
	


void plik::wypisanie(){
cout<<"wyniki: "<<minimum_licznik<<" "<<minimum_mianownik<<endl;
	} 

int main(int argc, char** argv) {
    plik p;
    p.otworzPlik();
    p.wczytajPlik();
    p.petla();
    p.wypisanie();
    p.zamknijPlik();  
    return 0;
}
